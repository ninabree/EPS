
@{
    ViewData["Title"] = "DMRejNCC";
    Layout = "~/Views/Shared/_ModalLayout.cshtml";
}

@using ExpenseProcessingSystem.ViewModels
@model List<DMNCCViewModel>
<div id="table" class="table-editable">
    @using (Html.BeginForm("RejNCC", "Home", FormMethod.Post, new { @class = "validate-form", @id = "tsForm" }))
    {
        <table class="table table-bordered editable-th">
            <tr>
                <th>Category Name</th>
                <th>NCC Pro-Forma Entries</th>
                <th>Status</th>
            </tr>
            @if (Model != null)
            {
                @for (int i = 0; i < Model.Count(); i++)
                {
                    <tr>
                        <td contenteditable="false">@Html.TextBoxFor(item => item[i].NCC_Name, new { @class = "w-full" })</td>
                        <td contenteditable="false">@Html.TextBoxFor(item => item[i].NCC_Pro_Forma, new { @class = "w-full" })</td>
                        <td contenteditable="false">@Html.TextBoxFor(item => item[i].NCC_Status, new { @class = "w-full" })</td>
                        @Html.HiddenFor(item => item[i].NCC_MasterID)
                    </tr>
                }
            }
        </table>
    }
</div>