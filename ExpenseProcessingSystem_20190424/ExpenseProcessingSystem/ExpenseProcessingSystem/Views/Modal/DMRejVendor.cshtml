
@{
    ViewData["Title"] = "DMRejVendor";
    Layout = "~/Views/Shared/_ModalLayout.cshtml";
}
@using ExpenseProcessingSystem.ViewModels
@model List<DMVendorViewModel>
<div id="table" class="table-editable">
    @using (Html.BeginForm("RejVendor", "Home", FormMethod.Post, new { @class = "validate-form", @id = "tsForm" }))
    {
        <table class="table table-bordered editable-th">
            <tr>
                <th>Vendor</th>
                <th>TIN</th>
                <th>Address</th>
                <th>Status</th>
            </tr>
            @if (Model != null)
            {
                @for (int i = 0; i < Model.Count(); i++)
                {
                    <tr>
                        <td contenteditable="false">@Html.TextBoxFor(item => item[i].Vendor_Name, new { @class = "w-full" })</td>
                        <td contenteditable="false">@Html.TextBoxFor(item => item[i].Vendor_TIN, new { @class = "w-full" })</td>
                        <td contenteditable="false">@Html.TextBoxFor(item => item[i].Vendor_Address, new { @class = "w-full" })</td>
                        <td contenteditable="false">@Html.TextBoxFor(item => item[i].Vendor_Status, new { @class = "w-full" })</td>
                        @Html.HiddenFor(item => item[i].Vendor_MasterID)
                    </tr>
                }
            }
        </table>
    }
</div>
