<script type="text/javascript">
    $(document).ready(function () {
        $(document).on("click", "#btnVendorAdd", function (e) {
            var hiddenTR = $('#NewVendorVM_0__Vendor_Tax_Rates_ID');
            var hiddenVAT = $('#NewVendorVM_0__Vendor_VAT_ID');
            //var arrTR = [];
            //var arrVAT = [];
            var arrTR = "";
            var arrVAT = "";
            $('.trChk:checked').each(function () {
                arrTR += ($(this).val())+",";
            });
            $('.vatChk:checked').each(function () {
                arrVAT += ($(this).val()) + ",";
            });
            hiddenTR.val(arrTR);
            hiddenVAT.val(arrVAT);
        });
    });
</script>
