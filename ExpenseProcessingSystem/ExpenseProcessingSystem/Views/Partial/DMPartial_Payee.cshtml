
@{
    ViewData["Title"] = "DMPartial_Payee";
    Layout = "~/Views/Shared/_ModalLayout.cshtml";
}

@using ExpenseProcessingSystem.ViewModels
@model DMViewModel

<div class="tbl-cont">
    <form asp-action="DM" asp-controller="Home" method="get" id="search-frm">
        <div class="form-actions no-color">
            <p>
                Find by:
                <table class="table">
                    <tr>
                        <td>@Html.LabelFor(model => model.DMFilters.PF.PF_Name)</td>
                        <td>@Html.TextBoxFor(model => model.DMFilters.PF.PF_Name, new { @class = "input" })</td>
                        <td>@Html.LabelFor(model => model.DMFilters.PF.PF_TIN)</td>
                        <td>@Html.TextBoxFor(model => model.DMFilters.PF.PF_TIN, new { @class = "input" })</td>
                        <td>@Html.LabelFor(model => model.DMFilters.PF.PF_Address)</td>
                        <td>@Html.TextBoxFor(model => model.DMFilters.PF.PF_Address, new { @class = "input" })</td>
                        <td>@Html.LabelFor(model => model.DMFilters.PF.PF_Type)</td>
                        <td>@Html.TextBoxFor(model => model.DMFilters.PF.PF_Type, new { @class = "input" })</td>
                        <td>@Html.LabelFor(model => model.DMFilters.PF.PF_No)</td>
                        <td>@Html.TextBoxFor(model => model.DMFilters.PF.PF_No, new { @class = "input" })</td>
                    </tr>
                    <tr>
                        <td>@Html.LabelFor(model => model.DMFilters.PF.PF_Creator_Name)</td>
                        <td>@Html.TextBoxFor(model => model.DMFilters.PF.PF_Creator_Name, new { @class = "input" })</td>
                        <td>@Html.LabelFor(model => model.DMFilters.PF.PF_Approver_Name)</td>
                        <td>@Html.TextBoxFor(model => model.DMFilters.PF.PF_Approver_Name, new { @class = "input" })</td>
                        <td>@Html.LabelFor(model => model.DMFilters.PF.PF_Status)</td>
                        <td>@Html.TextBoxFor(model => model.DMFilters.PF.PF_Status, new { @class = "input" })</td>
                        <td colspan="2"></td>
                        <td colspan="2" style="text-align: right;">
                            <input type="submit" value="Search" class="btn btn-default" id="search-btn" />
                            <input type="button" value="Back to Full List" id="full-list-btn" class="btn btn-default" />
                        </td>
                    </tr>
                </table>
            </p>
        </div>
    </form>
    <table class="table table-striped tab-tbl">
        <thead>
            <tr>
                <th></th>
                <th id="Name"><a asp-action="DM" asp-controller="Home" asp-route-partialName="@ViewData["Title"]" asp-route-sortOrder="@ViewData["PayeeSortParm"]">Payee<p class="btn-xs glyphicon @ViewData["glyph-1"]"></p></a></th>
                <th id="TIN"><a asp-action="DM" asp-controller="Home" asp-route-partialName="@ViewData["Title"]" asp-route-sortOrder="@ViewData["PayeeTINSortParm"]">TIN<p class="btn-xs glyphicon @ViewData["glyph-2"]"></p></a></th>
                <th id="Address"><a asp-action="DM" asp-controller="Home" asp-route-partialName="@ViewData["Title"]" asp-route-sortOrder="@ViewData["PayeeAddSortParm"]">Address<p class="btn-xs glyphicon @ViewData["glyph-3"]"></p></a></th>
                <th id="Type"><a asp-action="DM" asp-controller="Home" asp-route-partialName="@ViewData["Title"]" asp-route-sortOrder="@ViewData["PayeeTypeSortParm"]">Type<p class="btn-xs glyphicon @ViewData["glyph-4"]"></p></a></th>
                <th id="No"><a asp-action="DM" asp-controller="Home" asp-route-partialName="@ViewData["Title"]" asp-route-sortOrder="@ViewData["PayeeNoSortParm"]">Number<p class="btn-xs glyphicon @ViewData["glyph-5"]"></p></a></th>
                <th id="Creator_ID"><a asp-action="DM" asp-controller="Home" asp-route-partialName="@ViewData["Title"]" asp-route-sortOrder="@ViewData["PayeeCreatorSortParm"]">Input By<p class="btn-xs glyphicon @ViewData["glyph-6"]"></p></a></th>
                <th id="Approver_ID"><a asp-action="DM" asp-controller="Home" asp-route-partialName="@ViewData["Title"]" asp-route-sortOrder="@ViewData["PayeeApproverSortParm"]">Approved By<p class="btn-xs glyphicon @ViewData["glyph-7"]"></p></a></th>
                <th id="Status"><a asp-action="DM" asp-controller="Home" asp-route-partialName="@ViewData["Title"]" asp-route-sortOrder="@ViewData["PayeeStatusSortParm"]">Status<p class="btn-xs glyphicon @ViewData["glyph-8"]"></p></a></th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Payee != null)
            {
                @foreach (var item in Model.Payee)
                {
                    <tr>
                        <td><input class="tbl-chk" id="@item.Payee_ID" type="checkbox" /></td>
                        <td>@Html.DisplayFor(modelItem => item.Payee_Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.Payee_TIN)</td>
                        <td>@Html.DisplayFor(modelItem => item.Payee_Address)</td>
                        <td>@Html.DisplayFor(modelItem => item.Payee_Type)</td>
                        <td>@Html.DisplayFor(modelItem => item.Payee_No)</td>
                        <td>@Html.DisplayFor(modelItem => item.Payee_Creator_Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.Payee_Approver_Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.Payee_Status)</td>
                    </tr>
                }
            }
        </tbody>
    </table>
    @{
        var prevDisabled = !Model.Payee.HasPreviousPage ? "disabled" : "";
        var nextDisabled = !Model.Payee.HasNextPage ? "disabled" : "";
    }
    <a asp-action="DM"
       asp-route-sortOrder="@ViewData["CurrentSort"]"
       asp-route-page="@(Model.Payee.PageIndex - 1)"
       asp-controller="Home"
       asp-route-partialName="@ViewData["Title"]"
       asp-route-currentFilter="@ViewData["CurrentFilter"]"
       class="btn pagination-btn btn-xs btn-default @prevDisabled glyphicon glyphicon-menu-left">
    </a>
    <input type="text" class="pagination-input" id="paginationInput" val="" />
    <input type="text" class="pagination-input" value="of @(Model.Payee.TotalPages)" disabled />
    <a asp-action="DM"
       asp-route-sortOrder="@ViewData["CurrentSort"]"
       asp-controller="Home"
       asp-route-partialName="@ViewData["Title"]"
       asp-route-page="@(Model.Payee.PageIndex + 1)"
       asp-route-currentFilter="@ViewData["CurrentFilter"]"
       class="btn pagination-btn btn-default @nextDisabled glyphicon glyphicon-menu-right">
    </a>
    <div class="float-r m-r-10">
        <div class="dis-inline-block tbl-btn btn" id="add_payee">Add</div>
        <div class="dis-inline-block tbl-btn btn" id="edit_payee">Edit</div>
        <div class="dis-inline-block tbl-btn btn" id="delete_payee">Delete</div>
        @if (ViewBag.access.isAdmin)
        {
            <div class="dis-inline-block tbl-btn btn" id="apprv_payee">Approve</div>
            <div class="dis-inline-block tbl-btn btn" id="rej_payee">Reject</div>
        }
        <input type="hidden" value="@ViewData["Title"]" id="partialVal" />
    </div>
    @Html.Partial("ModalPartial")
</div>