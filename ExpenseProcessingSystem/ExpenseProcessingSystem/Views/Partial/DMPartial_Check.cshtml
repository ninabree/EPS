
@{
    ViewData["Title"] = "DMPartial_Check";
    Layout = "~/Views/Shared/_ModalLayout.cshtml";
}

@using ExpenseProcessingSystem.ViewModels
@model DMViewModel

<div class="tbl-cont">
    <table class="table table-striped tab-tbl">
        <thead>
            <tr>
                <th></th>
                <th id="Input_Date"><a asp-action="DM" asp-controller="Home" asp-route-partialName="@ViewData["Title"]" asp-route-sortOrder="@ViewData["CheckSortParm"]">Input Date<p class="btn-xs glyphicon @ViewData["glyph-1"]"></p></a></th>
                <th id="Series_From"><a asp-action="DM" asp-controller="Home" asp-route-partialName="@ViewData["Title"]" asp-route-sortOrder="@ViewData["CheckSeriesFromSortParm"]">Series From<p class="btn-xs glyphicon @ViewData["glyph-2"]"></p></a></th>
                <th id="Series_To"><a asp-action="DM" asp-controller="Home" asp-route-partialName="@ViewData["Title"]" asp-route-sortOrder="@ViewData["CheckSeriresToSortParm"]">Series To<p class="btn-xs glyphicon @ViewData["glyph-3"]"></p></a></th>
                <th id="Type"><a asp-action="DM" asp-controller="Home" asp-route-partialName="@ViewData["Title"]" asp-route-sortOrder="@ViewData["CheckTypeSortParm"]">Type<p class="btn-xs glyphicon @ViewData["glyph-4"]"></p></a></th>
                <th id="Name"><a asp-action="DM" asp-controller="Home" asp-route-partialName="@ViewData["Title"]" asp-route-sortOrder="@ViewData["CheckNameSortParm"]">Name<p class="btn-xs glyphicon @ViewData["glyph-5"]"></p></a></th>
                <th id="Creator_ID"><a asp-action="DM" asp-controller="Home" asp-route-partialName="@ViewData["Title"]" asp-route-sortOrder="@ViewData["CheckCreatorSortParm"]">Input By<p class="btn-xs glyphicon @ViewData["glyph-6"]"></p></a></th>
                <th id="Approver_ID"><a asp-action="DM" asp-controller="Home" asp-route-partialName="@ViewData["Title"]" asp-route-sortOrder="@ViewData["CheckApproverSortParm"]">Approved By<p class="btn-xs glyphicon @ViewData["glyph-7"]"></p></a></th>
                <th id="Last_Updated"><a asp-action="DM" asp-controller="Home" asp-route-partialName="@ViewData["Title"]" asp-route-sortOrder="@ViewData["CheckLastUpdatedSortParm"]">Last Updated<p class="btn-xs glyphicon @ViewData["glyph-8"]"></p></a></th>
                <th id="Status"><a asp-action="DM" asp-controller="Home" asp-route-partialName="@ViewData["Title"]" asp-route-sortOrder="@ViewData["CheckStatusSortParm"]">Status<p class="btn-xs glyphicon @ViewData["glyph-9"]"></p></a></th>
             </tr>
        </thead>
        <tbody>
            @if (Model.Check.Count != 0)
            {
                @foreach (var item in Model.Check)
                {
                    <tr>
                        <td><input class="tbl-chk" id="@item.Check_ID" type="checkbox" /></td>
                        <td>@Html.DisplayFor(modelItem => item.Check_Input_Date)</td>
                        <td>@Html.DisplayFor(modelItem => item.Check_Series_From)</td>
                        <td>@Html.DisplayFor(modelItem => item.Check_Series_To)</td>
                        <td>@Html.DisplayFor(modelItem => item.Check_Type)</td>
                        <td>@Html.DisplayFor(modelItem => item.Check_Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.Check_Creator_Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.Check_Approver_Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.Check_Last_Updated)</td>
                        <td>@Html.DisplayFor(modelItem => item.Check_Status)</td>
                    </tr>
                }
            }
            else
            {
                <tr></tr>}
        </tbody>
    </table>
    @{
        var prevDisabled = !Model.Check.HasPreviousPage ? "disabled" : "";
        var nextDisabled = !Model.Check.HasNextPage ? "disabled" : "";
    }

    <a asp-action="DM"
       asp-route-sortOrder="@ViewData["CurrentSort"]"
       asp-route-page="@(Model.Check.PageIndex - 1)"
       asp-controller="Home"
       asp-route-partialName="@ViewData["Title"]"
       asp-route-currentFilter="@ViewData["CurrentFilter"]"
       class="btn pagination-btn btn-xs btn-default @prevDisabled glyphicon glyphicon-menu-left">
    </a>
    <input type="text" class="pagination-input" id="paginationInput" val="" />
    <input type="text" class="pagination-input" value="of @(Model.Check.TotalPages)" disabled />
    <a asp-action="DM"
       asp-route-sortOrder="@ViewData["CurrentSort"]"
       asp-controller="Home"
       asp-route-partialName="@ViewData["Title"]"
       asp-route-page="@(Model.Check.PageIndex + 1)"
       asp-route-currentFilter="@ViewData["CurrentFilter"]"
       class="btn pagination-btn btn-default @nextDisabled glyphicon glyphicon-menu-right">
    </a>
    <div class="float-r m-r-10">
        <button class="dis-inline-block tbl-btn btn add-rec rec" id="add_chk">Add</button>
        <button class="dis-inline-block tbl-btn btn edit-rec rec" id="edit_chk">Edit</button>
        <button class="dis-inline-block tbl-btn btn delete-rec rec" id="delete_chk">Delete</button>
        <input type="hidden" value="@ViewData["Title"]" id="partialVal" />
    </div>
    @Html.Partial("ModalPartial")
</div>