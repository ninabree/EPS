<script>
    $(document).ready(function () {
        $('#liqudation').find('a').addClass('selected');

        //Enable Cash breakdown button if currency = PHP, disable if not.
        var trs = $("#inputTable").find("tbody").find("tr");
        for (var cnt = 0; cnt < trs.length; cnt++) {
            reqBtnDisable(cnt);
