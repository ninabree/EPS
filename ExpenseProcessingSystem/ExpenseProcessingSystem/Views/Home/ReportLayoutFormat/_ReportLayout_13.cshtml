@model ExpenseProcessingSystem.ViewModels.HomeReportDataFilterViewModel

@{
    Layout = null;
    var dateNow = DateTime.Now.ToShortDateString();
    var cnt = 1;
}

<style>
    .fw-bold {
        font-weight: bold;
    }
    .fw-italic{
        font-style: italic;
    }
    .fw-underline{
        text-decoration: underline;
    }
    .fw-doub-underline {
        text-decoration: double;
    }
    .fw-thk-underline{
        font-weight: bold;
    }
</style>

<table border="0" style="width:100%">
    <colgroup>
        <col style="width:8.33%" />
        <col style="width:8.33%" />
        <col style="width:8.33%" />
        <col style="width:8.33%" />
        <col style="width:8.33%" />
        <col style="width:8.33%" />
        <col style="width:8.33%" />
        <col style="width:8.33%" />
        <col style="width:8.33%" />
        <col style="width:8.33%" />
        <col style="width:8.33%" />
        <col style="width:8.33%" />
    </colgroup>
    <tbody>
        <tr>
            <td colspan="12">@dateNow</td>
        </tr>
        <tr><td colspan="12"><p></p></td></tr>
        <tr><td colspan="12"><p></p></td></tr>
        <tr><td colspan="12"><p></p></td></tr>
        <tr>
            <td colspan="12"><p class="fw-bold">MS. MARI ROSE G. SIOSON</p></td>
        </tr>
        <tr>
            <td colspan="12"><p class="fw-bold">Senior Asst. Vice President/Branch Head</p></td>
        </tr>
        <tr>
            <td colspan="12"><p class="">Banco de Oro Unibank, Inc. - Main Office Branch</p></td>
        </tr>
        <tr>
            <td colspan="12"><p class="">BDO Corporate Center</p></td>
        </tr>
        <tr>
            <td colspan="12"><p class="">7899 Makati Avenue, Makati City 0726</p></td>
        </tr>
        <tr><td colspan="12"><p></p></td></tr>
        <tr><td colspan="12"><p></p></td></tr>
        <tr>
            <td colspan="12"><p class="fw-bold">Re: Letter of Instructions </p></td>
        </tr>
        <tr>
            <td></td>
            <td><p class="">DDV No/s. </p></td>
            @if (@Model.ReportLOI.Rep_DDVNoList.Count <= 8)
            {
                @foreach (var val in Model.ReportLOI.Rep_DDVNoList)
                {
                    <td>@val</td>
                }
            }
            else
            {
                int lmt = (@Model.ReportLOI.Rep_DDVNoList.Count < 8) ? @Model.ReportLOI.Rep_DDVNoList.Count : 7;
                for (int cnt1 = 0; cnt1 <= lmt; cnt1++)
                {
                    <td>@Model.ReportLOI.Rep_DDVNoList[cnt1]</td>
                }
            }
        </tr>
        @if (@Model.ReportLOI.Rep_DDVNoList.Count >= 9)
        {
            var lmt = (@Model.ReportLOI.Rep_DDVNoList.Count < 16) ? @Model.ReportLOI.Rep_DDVNoList.Count : 16;
            <tr>
                <td></td>
                <td></td>
                @for (int count = 8; count < lmt; count++)
                {
                    <td>@Model.ReportLOI.Rep_DDVNoList[count]</td>
                }
            </tr>
        }
        @if (@Model.ReportLOI.Rep_DDVNoList.Count >= 16)
        {
            <tr>
                <td></td>
                <td></td>
                @for (int count = 16; count < 16; count++)
                {
                    <td>@Model.ReportLOI.Rep_DDVNoList[count]</td>
                }
            </tr>
        }
        <tr><td colspan="12"><p></p></td></tr>
        <tr>
            <td colspan="12">This is to authorize BDO Universal Bank - Corporate Center Branch to debit MIZUHO BANK, LTD. - </td>
        </tr>
        <tr>
            <td colspan="12">MANILA BRANCH ACCT. No. 003008019974 today, @dateNow for the total amount of</td>
        </tr>
        <tr>
            <td colspan="12">Philippine Pesos: @Model.ReportLOI.Rep_AmountInString</td>
        </tr>
        <tr>
            <td colspan="12">(PHP @Model.ReportLOI.Rep_Amount), and credit to the account of:</td>
        </tr>
        <tr><td colspan="12"><p></p></td></tr>
        <tr class="text-center">
            <td></td>
            <td colspan="3"><p class="fw-bold">Name</p></td>
            <td colspan="2"><p class="fw-bold">Account Type</p></td>
            <td colspan="3"><p class="fw-bold">Account No.</p></td>
            <td colspan="3"><p class="fw-bold">Amount(PHP)</p></td>
        </tr>
        @foreach (var vals in Model.ReportLOI.Rep_LOIAccList)
        {
            <tr class="text-center">
                <td>@cnt</td>
                <td colspan="3" class="fw-underline"><p>@vals.loi_Emp_Name</p></td>
                <td colspan="2" class="fw-underline"><p>@vals.loi_Acc_Type</p></td>
                <td colspan="3" class="fw-underline"><p>@vals.loi_Acc_No</p></td>
                <td colspan="3" class="fw-underline"><p>@vals.loi_Amount</p></td>
            </tr>
        }
        <tr>
            <td colspan="9"></td>
            <td colspan="3" class="fw-doub-underline">@Model.ReportLOI.Rep_Amount</td>
        </tr>
        <tr><td colspan="12"><p></p></td></tr>
        <tr>
            <td colspan="12"><p>This authority to debit and credit is issued pursuant to and subject to the terms and conditions of the Company's</p></td>
        </tr>
        <tr>
            <td colspan="12"><p>Regular Payroll Agreement with the Bank.</p></td>
        </tr>
        <tr><td colspan="12"><p></p></td></tr>
        <tr><td colspan="12"><p></p></td></tr>
        <tr><td colspan="12"><p></p></td></tr>
        <tr>
            <td colspan="12"><p>Thank you and best regards.</p></td>
        </tr>
        <tr><td colspan="12"><p></p></td></tr>
        <tr>
            <td colspan="12"><p>Very truly yours, </p></td>
        </tr>
        <tr><td colspan="12"><p></p></td></tr>
        <tr><td colspan="12"><p></p></td></tr>
        <tr>
            <td colspan="3" class="fw-thk-underline">________________________</td>
            <td colspan="9"></td>
        </tr>
        <tr>
            <td colspan="3" class="fw-bold">@Model.ReportLOI.Rep_Approver_Name.ToUpper()</td>
            <td colspan="9"></td>
        </tr>
        <tr><td colspan="12"><p></p></td></tr>
        <tr><td colspan="12"><p></p></td></tr>
        <tr>
            <td colspan="3" class="fw-thk-underline">________________________</td>
            <td colspan="9"></td>
        </tr>
        <tr>
            <td colspan="3" class="fw-bold">@Model.ReportLOI.Rep_Verifier1_Name.ToUpper()</td>
            <td colspan="9"></td>
        </tr>
    </tbody>
</table>
