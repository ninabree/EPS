@model ExpenseProcessingSystem.ViewModels.HomeReportDataFilterViewModel

@{
    Layout = null;
}

<style>
    .table-PDF {
        border-collapse: collapse;
        border-width: 1px;
        border-style: solid;
        border-color: black;
        margin-top: 20px;
    }

    thead {
        display: table-header-group
    }

    tfoot {
        display: table-row-group
    }

    .tr-PDF {
        page-break-inside: avoid;
        border-width: 1px;
    }

    .th-PDF {
        border-width: 1px;
        border-style: solid;
        border-color: black;
        font-weight: bold;
    }

    .td-PDF {
        border-width: 1px;
        border-style: solid;
        border-color: black;
    }
</style>

<table border="0" style="width:100%">
    <tr>
        <td style="width:10%" rowspan="2"><img src="@Model.ReportCommonVM.Header_Logo" style="width:100%;height:40%" /></td>
        <td style="text-align:center"><b>Withholding Taxes Summary Report</b></td>
        <td style="width:10%"></td>
    </tr>
    <tr>
        <td style="text-align:center">
            @Html.DisplayFor(Model => Model.HomeReportFilter.ReportFrom)
            -
            @Html.DisplayFor(Model => Model.HomeReportFilter.ReportTo)
        </td>
        <td></td>
    </tr>
    <tr>
        <td style="padding-left:3%">Name</td>
        <td colspan="2">@Model.ReportCommonVM.Header_Name</td>
    </tr>
    <tr>
        <td style="padding-left:3%">TIN</td>
        <td colspan="2">@Model.ReportCommonVM.Header_TIN</td>
    </tr>
    <tr>
        <td style="padding-left:3%">Address</td>
        <td colspan="2">@Model.ReportCommonVM.Header_Address</td>
    </tr>
</table>

<table class="table-PDF">
    <thead>
        <tr style="vertical-align:top" class="tr-PDF">
            <th class="th-PDF">Voucher Number</th>
            <th class="th-PDF">Check Number</th>
            <th class="th-PDF">Value Date</th>
            <th class="th-PDF">Reference No.</th>
            <th class="th-PDF">Section</th>
            <th class="th-PDF">Remarks</th>
            <th class="th-PDF">Debit/Credit</th>
            <th class="th-PDF">Currency</th>
            <th class="th-PDF">Amount</th>
            <th class="th-PDF">Customer</th>
            <th class="th-PDF">Account Code</th>
            <th class="th-PDF">Account Number</th>
            <th class="th-PDF">Account Name</th>
            <th class="th-PDF">Exchange Rate</th>
            <th class="th-PDF">Contra-Currency</th>
            <th class="th-PDF">Fund</th>
            <th class="th-PDF">Advice Print</th>
            <th class="th-PDF">Details</th>
            <th class="th-PDF">Entity</th>
            <th class="th-PDF">Division</th>
            <th class="th-PDF">Inter-Amount</th>
            <th class="th-PDF">Inter-Rate</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var i in Model.HomeReportOutputWTS)
        {
            <tr class="tr-PDF">
                <td style="text-align:center" class="td-PDF">@i.Trans_Voucher_Number</td>
                <td style="text-align:center" class="td-PDF">@i.Trans_Check_Number</td>
                <td style="text-align:center" class="td-PDF">@i.Trans_Value_Date</td>
                <td style="text-align:center" class="td-PDF">@i.Trans_Reference_No</td>
                <td style="text-align:center" class="td-PDF">@i.Trans_Section</td>
                <td style="text-align:left" class="td-PDF">@i.Trans_Remarks</td>
                <td style="text-align:center" class="td-PDF">@i.Trans_DebitCredit</td>
                <td style="text-align:center" class="td-PDF">@i.Trans_Currency</td>
                <td style="text-align:right" class="td-PDF">@i.Trans_Amount</td>
                <td style="text-align:center" class="td-PDF">@i.Trans_Customer</td>
                <td style="text-align:center" class="td-PDF">@i.Trans_Account_Code</td>
                <td style="text-align:center" class="td-PDF">@i.Trans_Account_Number</td>
                <td style="text-align:left" class="td-PDF">@i.Trans_Account_Name</td>
                <td style="text-align:right" class="td-PDF">@i.Trans_Exchange_Rate</td>
                <td style="text-align:center" class="td-PDF">@i.Trans_Contra_Currency</td>
                <td style="text-align:center" class="td-PDF">@i.Trans_Fund</td>
                <td style="text-align:center" class="td-PDF">@i.Trans_Advice_Print</td>
                <td style="text-align:center" class="td-PDF">@i.Trans_Details</td>
                <td style="text-align:center" class="td-PDF">@i.Trans_Entity</td>
                <td style="text-align:center" class="td-PDF">@i.Trans_Division</td>
                <td style="text-align:right" class="td-PDF">@i.Trans_InterAmount</td>
                <td style="text-align:right" class="td-PDF">@i.Trans_InterRate</td>
            </tr>
        }
    </tbody>
</table>

