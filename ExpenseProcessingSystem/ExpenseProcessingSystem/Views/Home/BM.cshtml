
@{
    ViewData["Title"] = "BM";
}
@using ExpenseProcessingSystem.ViewModels

@model PaginatedList<BMViewModel>

@using (Html.BeginForm("BM_PrintList", "Home", FormMethod.Post, new { @class = "validate-form" }))
{
    <div class="tab-content-cont m-t-10">
        <div class="tbl-cont">
            <table class="table table-striped tab-tbl table-hover">
                <thead>
                    <tr>
                        <th style="text-align:center"><a asp-action="BM" asp-route-sortOrder="@ViewData["AccountMappingSortParm"]">Account Mapping<p class="btn-xs glyphicon @ViewData["glyph-1"]"></p></a></th>
                        <th style="text-align:center"><a asp-action="BM" asp-route-sortOrder="@ViewData["AccountNameSortParm"]">Account Name<p class="btn-xs glyphicon @ViewData["glyph-2"]"></p></a></th>
                        <th style="text-align:center"><a asp-action="BM" asp-route-sortOrder="@ViewData["GBaseBudgetCodeSortParm"]">G-Base Budget Code<p class="btn-xs glyphicon @ViewData["glyph-3"]"></p></a></th>
                        <th style="text-align:center"><a asp-action="BM" asp-route-sortOrder="@ViewData["AccountNumberSortParm"]">Account Number<p class="btn-xs glyphicon @ViewData["glyph-4"]"></p></a></th>
                        <th style="text-align:center"><a asp-action="BM" asp-route-sortOrder="@ViewData["BudgetSortParm"]">Current Budget<p class="btn-xs glyphicon @ViewData["glyph-5"]"></p></a></th>
                        <th style="text-align:center"><a asp-action="BM" asp-route-sortOrder="@ViewData["BudgetNewSortParm"]">Processing budget<p class="btn-xs glyphicon @ViewData["glyph-6"]"></p></a></th>
                        <th style="text-align:center"><a asp-action="BM" asp-route-sortOrder="@ViewData["GWriteStatusParm"]">G-Write Status<p class="btn-xs glyphicon @ViewData["glyph-7"]"></p></a></th>
                        <th style="text-align:center"><a asp-action="BM" asp-route-sortOrder="@ViewData["DateRegisteredSortParm"]">Date Registered<p class="btn-xs glyphicon @ViewData["glyph-8"]"></p></a></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.BM_Acc_Group_Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.BM_Acc_Name)</td>
                        <td style="text-align:center">@Html.DisplayFor(modelItem => item.BM_GBase_Code)</td>
                        <td style="text-align:center">@Html.DisplayFor(modelItem => item.BM_Acc_Num)</td>
                        <td style="text-align:right">@Html.DisplayFor(modelItem => item.BM_Budget_Current)</td>
                        <td style="text-align:right">@Html.DisplayFor(modelItem => item.BM_Budget_Amount)</td>
                        <td style="text-align:center">@Html.DisplayFor(modelItem => item.BM_GWrite_Status)</td>
                        <td style="text-align:center">@Html.DisplayFor(modelItem => item.BM_Date_Registered)</td>
                    </tr>
                    }
                </tbody>
            </table>
            @{
                var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
                var nextDisabled = !Model.HasNextPage ? "disabled" : "";
            }

            <a asp-action="BM"
               asp-route-sortOrder="@ViewData["CurrentSort"]"
               asp-route-page="@(Model.PageIndex - 1)"
               asp-route-currentFilter="@ViewData["CurrentFilter"]"
               class="btn pagination-btn btn-xs btn-default @prevDisabled glyphicon glyphicon-menu-left">
            </a>
            <input type="text" class="pagination-input" id="paginationInput" val="" />
            <input type="text" class="pagination-input" value="of @(Model.TotalPages)" disabled />
            <a asp-action="BM"
               asp-route-sortOrder="@ViewData["CurrentSort"]"
               asp-route-page="@(Model.PageIndex + 1)"
               asp-route-currentFilter="@ViewData["CurrentFilter"]"
               class="btn pagination-btn btn-default @nextDisabled glyphicon glyphicon-menu-right">
            </a>
            <div class="float-r m-r-10 divBtn">
                <button type="button" class="tbl-btn btnBudgetReg">Budget Registration</button>
                <button type="button" class="tbl-btn btnBudgetRegHist">History of Budget Registration</button>
                <button class="tbl-btn">Print Budget List</button>
            </div>
            <div id="modalDiv2">
                @Html.Partial("ModalPartial2")
            </div>
            @*validation message*@
            <div id="ValidationSummary" style="display:none" class="">
                @Html.ValidationSummary(false, "", new { @id = "validationSummary" })
            </div>
        </div>
    </div>
}
<script>
    $(function () {
        //Budget registration modal
        $(".divBtn").on("click", ".btnBudgetReg", function (e) {
            e.stopImmediatePropagation();

            var modalDivBody = $('.modal-body2');
            modalDivBody.empty();
            if ($('.modal-header2').find(".modal-title")[0] == null) {
                $('.modal-header2').append('<h4 class="modal-title">Budget Registration</h4>');
            } else {
                $('.modal-title').text("Budget Registration");
            }

            modalDivBody.load("@Url.Action("BudgetRegistrationModal", "Modal")", {

            }, function (response, status, xhr) {
                if (status == "error") {
                    alert("Something went wrong.");
                } else {

                }
            });

            $('.myModal2').modal('show');
        });

        //History of budget registration modal
        $(".divBtn").on("click", ".btnBudgetRegHist", function (e) {
            e.stopImmediatePropagation();

            var modalDivBody = $('.modal-body2');
            modalDivBody.empty();

            if ($('.modal-header2').find(".modal-title")[0] == null) {
                $('.modal-header2').append('<h4 class="modal-title">History of Budget Registration</h4>');
            } else {
                $('.modal-title').text("History of Budget Registration");
            }

            modalDivBody.load("@Url.Action("BudgetRegHistModal", "Modal")", {

            }, function (response, status, xhr) {
                if (status == "error") {
                    alert("Something went wrong.");
                } else {

                }
            });

            $('.myModal2').modal('show');
        });
    });
</script>
