            <tr>
                <td class="lbl"><label for="ReverseEntry_TransNo">Transaction No</label></td>
                <td class="inp"><input class="text-box single-line input" id="ReverseEntry_TransNo" 
                                       name="ReverseEntry.TransNo" type="text" value=""></td>
