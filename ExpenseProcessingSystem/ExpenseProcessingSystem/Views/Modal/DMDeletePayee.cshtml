
@{
    ViewData["Title"] = "DMDeletePayee";
    Layout = "~/Views/Shared/_ModalLayout.cshtml";
}
@using ExpenseProcessingSystem.ViewModels
@model List<DMPayeeViewModel>
<div id="table" class="table-editable">
    @using (Html.BeginForm("DeletePayee", "Home", FormMethod.Post, new { @class = "validate-form", @id = "tsForm" }))
    {
        <table class="table table-bordered editable-th">
            <tr>
                <th>Payee</th>
                <th>TIN</th>
                <th>Address</th>
                <th>Type</th>
                <th>Number</th>
                <th>Status</th>
            </tr>
            @if (Model != null)
            {
                @for (int i = 0; i < Model.Count(); i++)
                {
                    <tr>
                        <td contenteditable="false">@Html.TextBoxFor(item => item[i].Payee_Name)</td>
                        <td contenteditable="false">@Html.TextBoxFor(item => item[i].Payee_TIN)</td>
                        <td contenteditable="false">@Html.TextBoxFor(item => item[i].Payee_Address)</td>
                        <td contenteditable="false">@Html.TextBoxFor(item => item[i].Payee_Type)</td>
                        <td contenteditable="false">@Html.TextBoxFor(item => item[i].Payee_No)</td>
                        <td contenteditable="false">@Html.TextBoxFor(item => item[i].Payee_Status)</td>
                        @Html.HiddenFor(item => item[i].Payee_ID)
                    </tr>
                }
            }
        </table>
    }
</div>
