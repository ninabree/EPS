
@{
    ViewData["Title"] = "DMAddDept_Pending";
    Layout = "~/Views/Shared/_ModalLayout.cshtml";
}

@using ExpenseProcessingSystem.ViewModels
@model NewDeptListViewModel

<div id="table" class="">
    @using (Html.BeginForm("AddDept_Pending", "Home", FormMethod.Post, new { @class = "validate-form", @id = "tsForm" }))
    {
        <table class="table table-bordered editable-th">
            <tr>
                <th>Department Name</th>
                <th>Department Code</th>
                <th>Budget Unit</th>
                <th></th>
            </tr>
            <tr id="NewDept-Tr-0">
                <td>@Html.TextBoxFor(m => m.NewDeptVM[0].Dept_Name, new { @class = "w-full" })</td>
                <td>@Html.TextBoxFor(m => m.NewDeptVM[0].Dept_Code, new { @class = "w-full" })</td>
                <td>@Html.TextBoxFor(m => m.NewDeptVM[0].Dept_Budget_Unit, new { @class = "w-full" })</td>
                <td>
                    <span class="table-remove glyphicon glyphicon-remove"></span>
                </td>
            </tr>
        </table>
    }
</div>
