
@{
    ViewData["Title"] = "DMEditPayee";
    Layout = "~/Views/Shared/_ModalLayout.cshtml";
}
@using ExpenseProcessingSystem.ViewModels
@model List<DMPayeeViewModel>
<div id="table" class="table-editable">
    <table class="table table-bordered editable-th">
        <tr>
            <th>Payee</th>
            <th>TIN</th>
            <th>Address</th>
            <th>Type</th>
            <th>Number</th>
            <th>Status</th>
        </tr>
        @if (Model != null)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td contenteditable="true">@Html.DisplayFor(modelItem => item.Payee_Name)</td>
                    <td contenteditable="true">@Html.DisplayFor(modelItem => item.Payee_TIN)</td>
                    <td contenteditable="true">@Html.DisplayFor(modelItem => item.Payee_Address)</td>
                    <td contenteditable="true">@Html.DisplayFor(modelItem => item.Payee_Type)</td>
                    <td contenteditable="true">@Html.DisplayFor(modelItem => item.Payee_No)</td>
                    <td>@Html.DisplayFor(modelItem => item.Payee_Status)</td>
                </tr>
            }
        }
    </table>
</div>
