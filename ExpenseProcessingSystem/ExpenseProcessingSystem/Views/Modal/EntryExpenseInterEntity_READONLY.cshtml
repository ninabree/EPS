<script>
    $(document).ready(function () {
        //set fields
        var curr1Amt = $("table").find("#Inter_Currency1_Amount");
        var curr2Amt = $("table").find("#Inter_Currency2_Amount");
        var chk1 = $("table").find("#Inter_Check1");
        var chk2 = $("table").find("#Inter_Check2");
        var conv1Amt = $("table").find("#Inter_Convert1_Amount");
        var conv2Amt = $("table").find("#Inter_Convert2_Amount");
        var rate = $("table").find("#Inter_Rate");

        var curr1Val = $(curr1Amt).text().replace(" ", "").replace(",", "");
        var curr2Val = $(curr2Amt).text().replace(" ", "").replace(",", "");
        isChk();
        var conv1Val = $(conv1Amt).text().replace(" ", "").replace(",", "");
        var conv2Val = $(conv2Amt).text().replace(" ", "").replace(",", "");

        if ((curr1Val != 0) && isChk2 && (conv2Val != 0)) {
            UpdateParticulars1(curr1Val, conv2Val);
        }
        else if ((curr2Val != 0) && isChk1 && (conv1Val != 0)) {
            UpdateParticulars2(curr2Val, conv1Val);
        } else {
            //defaultInter();
        }
        // ---------------------- [[ FUNCTIONS ]] ----------------------
        function updateCurrency2() {
            var val = $(".curr2").find("option:selected").text();
            var id = $(".curr2").find("option:selected").val();
            $("#convertCurr1").text(val);
            $(".curr2-abbr").text(val);
            $("#curr2-lbl").text(val + " Amount");
            $('#interPartList_0__Inter_Particular2_1__Particular_CredCurr_ID').val(id);
            $('#interPartList_0__Inter_Particular3_0__Particular_CredCurr_ID').val(id);
            $('#interPartList_0__Inter_Particular3_1__Particular_CredCurr_ID').val(id);
        }
        function isChk() {
            isChk1 = ('@Model.Inter_Check1' == 'True');
            isChk2 = ('@Model.Inter_Check2' == 'True');
        }
        function UpdateParticulars1(currVal, convVal) {
            var rate = $("table").find("#Inter_Rate").text();
            if (!($.isNumeric(currVal) && $.isNumeric(convVal) && $.isNumeric(rate))) {
                alert("Invalid amount/s provided.");
            } else {
                var decVal = 2;
                var decVal2 = 2;
                if ($("table").find("#Inter_Currency1_ID").val() == $(document).find("#yenID").val()) {
                    decVal = 0;
                }
                if ($("table").find("#Inter_Currency2_ID").val() == $(document).find("#yenID").val()) {
                    decVal2 = 0;
                }

                currVal = AC(roundInter(parseFloat(RC(currVal)), decVal));
                var curr2 = AC(roundInter(parseFloat(RC(convVal)) * parseFloat(RC(rate)), decVal));
                var curr2Dec = AC(roundInter(parseFloat(RC(curr2)), decVal));
                var parCredit = AC2(roundInter(parseFloat(RC(convVal)), decVal2));
                var parDebit = AC(roundInter(parseFloat(RC(currVal)) + parseFloat(RC(curr2)), decVal));

                $(curr2Amt).val(curr2Dec);
                $("#par1-0").text(parDebit);
                $("#par1-1").text(curr2Dec);
                $("#par1-2").text(currVal);
                $("#par2-0").text(curr2Dec);
                $("#par2-1").text((parCredit))
                $("#par3-0").text((parCredit));
                $("#par3-1").text((parCredit));
                $("#par2-0-1").text(rate);
                $("table").find("#Inter_Currency1_Amount").text(AC(curr1Val.replace(".00",""), decVal));
                $("table").find("#Inter_Currency2_Amount").text(AC(curr2Val.replace(".00", ""), decVal));
                $("table").find("#Inter_Convert1_Amount").text(AC2(conv1Val.replace(".00", ""), decVal2));
                $("table").find("#Inter_Convert2_Amount").text(AC2(conv2Val.replace(".00", ""), decVal2));
            }
        }
        function UpdateParticulars2(currVal, convVal) {
            var rate = $("table").find("#Inter_Rate").text();
            if (!($.isNumeric(currVal) && $.isNumeric(convVal) && $.isNumeric(rate))) {
                alert("Invalid amount/s provided.");
            } else {
                var decVal = 2;
                var decVal2 = 2;
                if ($("table").find("#Inter_Currency1_ID").val() == $(document).find("#yenID").val()) {
                    decVal = 0;
                }
                if ($("table").find("#Inter_Currency2_ID").val() == $(document).find("#yenID").val()) {
                    decVal2 = 0;
                }
                var curr1 = AC(roundInter(parseFloat(RC(convVal)) * parseFloat(RC(rate)), decVal));
                var curr1Dec = AC(roundInter(parseFloat(RC(curr1)), decVal));
                var parCredit = AC2(roundInter(parseFloat(RC(convVal)), decVal2));
                var parDebit = AC(roundInter(parseFloat(RC(currVal)) + parseFloat(RC(curr1)), decVal));

                $(curr1Amt).val(curr1Dec);
                $("#par1-0").text(parDebit);
                $("#par1-1").text(curr1Dec);
                $("#par1-2").text(currVal);
                $("#par2-0").text(curr1Dec);
                $("#par2-1").text((parCredit));
                $("#par3-0").text((parCredit));
                $("#par3-1").text((parCredit));
                $("#par2-0-1").text(rate);

                $("table").find("#Inter_Currency1_Amount").text(AC(curr1Val.replace(".00", ""), decVal));
                $("table").find("#Inter_Currency2_Amount").text(AC(curr2Val.replace(".00", ""), decVal));
                $("table").find("#Inter_Convert1_Amount").text(AC2(conv1Val.replace(".00", ""), decVal2));
                $("table").find("#Inter_Convert2_Amount").text(AC2(conv2Val.replace(".00", ""), decVal2));
            }
        }
        function UpdateParticulars4(curr1Val, curr2Val, rateVal, checkBox) {
            if (!($.isNumeric(curr1Val) && $.isNumeric(curr2Val) && $.isNumeric(rateVal))) {
                alert("Invalid amount/s provided.");
            } else if (checkBox == "chk1") {
                var decVal = 2;
                var decVal2 = 2;
                if ($("table").find("#Inter_Currency1_ID").val() == $(document).find("#yenID").val()) {
                    decVal = 0;
                }
                if ($("table").find("#Inter_Currency2_ID").val() == $(document).find("#yenID").val()) {
                    decVal2 = 0;
                }
                var rateValDec = parseFloat(RC(rateVal));
                var curr1Dec = AC(roundInter(parseFloat(RC(curr1Val)), decVal));
                var curr2Dec = AC(roundInter(parseFloat(RC(curr2Val)), decVal));
                var parCredit = AC2(roundInter(parseFloat(RC(curr1Val)) / parseFloat(RC(rateVal)), decVal2));
                var parDebit = AC(roundInter(parseFloat(RC(curr1Val)) + parseFloat(RC(curr2Val)), decVal));

                $("#convertAmt1").val(parCredit);
                $("#par1-0").text(parDebit);
                $("#par1-1").text(curr2Dec);
                $("#par1-2").text(curr1Dec);
                $("#par2-0").text(curr2Dec);
                $("#par2-1").text((parCredit));
                $("#par3-0").text((parCredit));
                $("#par3-1").text((parCredit));
                $("#par2-0-1").text(rateValDec);
            } else if (checkBox == "chk2") {
                var decVal = 2;
                var decVal2 = 2;
                if ($("table").find("#Inter_Currency1_ID").val() == $(document).find("#yenID").val()) {
                    decVal = 0;
                }
                if ($("table").find("#Inter_Currency2_ID").val() == $(document).find("#yenID").val()) {
                    decVal2 = 0;
                }
                var rateValDec = parseFloat(RC(rateVal));
                var curr1Dec = AC(roundInter(parseFloat(RC(curr1Val)), decVal));
                var curr2Dec = AC(roundInter(parseFloat(RC(curr2Val)), decVal));
                var parCredit = AC2(roundInter(parseFloat(RC(curr2Val)) / parseFloat(RC(rateVal)), decVal2));
                var parDebit = AC(roundInter(parseFloat(RC(curr2Val)) + parseFloat(RC(curr1Val)), decVal));
                $("#convertAmt2").val((parCredit));
                $("#par1-0").text(parDebit);
                $("#par1-1").text(curr2Dec);
                $("#par1-2").text(curr1Dec);
                $("#par2-0").text(curr2Dec);
                $("#par2-1").text((parCredit));
                $("#par3-0").text((parCredit));
                $("#par3-1").text((parCredit));
                $("#par2-0-1").text(rateValDec);
            }
        }
        function UpdateParticulars3(currAmt) {
            //$(currAmt).val(0);
            $("#par1-0").text(0);
            $("#par1-1").text(0);
            $("#par1-2").text(0);
            $("#par2-0").text(0);
            $("#par2-1").text(0);
            $("#par3-0").text(0);
            $("#par3-1").text(0);
            $("#par2-0-1").text(0);
        }
        //ADD COMMA IN ENTRY 1-0, 1-1, 1-2 AND 2-0
        function AC(nStr) {
            if ($("table").find("#Inter_Currency1_ID").val() != $(document).find("#yenID").val()) {
                nStr = nStr + ".00";
            }
            nStr += '';
            x = nStr.split('.');
            x1 = x[0];
            x2 = x.length > 1 ? '.' + x[1] : '';
            var rgx = /(\d+)(\d{3})/;
            while (rgx.test(x1)) {
                x1 = x1.replace(rgx, '$1' + ',' + '$2');
            }

            return x1 + x2;
        };
        //ADD COMMA IN ENTRY 2-1, 3-0 AND 3-1
        function AC2(nStr) {
            if ($("table").find("#Inter_Currency2_ID").val() != $(document).find("#yenID").val()) {
                nStr = nStr + ".00";
            }

            nStr += '';
            x = nStr.split('.');
            x1 = x[0];
            x2 = x.length > 1 ? '.' + x[1] : '';
            var rgx = /(\d+)(\d{3})/;
            while (rgx.test(x1)) {
                x1 = x1.replace(rgx, '$1' + ',' + '$2');
            }

            return x1 + x2;
        };        //REMOVE COMMA
        function RC(nStr) {
            return nStr.replace(/\,/g, "");
        };
        //ROUNDING OF VALUES FOR INTER ENTITY
        function roundInter(num, scale) {
            if (typeof scale === 'undefined' || +scale === 0)
                return Math.round(num).toFixed(scale);

            num = +num;
            scale = +scale;

            if (isNaN(num) || !(typeof scale === 'number' && scale % 1 === 0))
                return NaN;

            // Shift
            num = num.toString().split('e');
            num = Math.round(+(num[0] + 'e' + (num[1] ? (+num[1] + scale) : scale)));

            // Shift back
            num = num.toString().split('e');
            return commaDigits((+(num[0] + 'e' + (num[1] ? (+num[1] - scale) : -scale))).toFixed(scale));
        }
        function computeValuesDDVInter(parent) {
            var pNode = parent;
            var grossAmt = $("#" + pNode.id + " .txtGross").val();

            $("#" + pNode.id + " .txtGross").attr("value", grossAmt);

            var itemNo = pNode.id; //jquery obj
            var chkEwtVal = $("#" + itemNo).find(".chkEwt").is(':checked');
            var vatable = $("#" + itemNo).find(".chkVat").is(':checked');
            if (chkEwtVal) {
                if (vatable) {
                    var vatRate = (Number($("#" + itemNo).find(".txtVat option:selected").text()) / 100);
                    var ewtRate = (Number($("#" + itemNo).find(".txtEwt option:selected").text()) / 100);
                    var netVat = roundNumber(grossAmt / (1 + vatRate), 2);
                    var ewt = roundNumber(netVat * ewtRate, 2);
                    var netEwt = grossAmt - ewt;

                    $("#" + itemNo).find(".txtCredEwt").val(ewt);
                    $("#" + itemNo).find(".txtCredCash").val(roundNumber(netEwt, 2));
                } else {
                    var ewtAmount = grossAmt * (Number($("#" + itemNo).find(".txtEwt option:selected").text()) / 100);
                    $("#" + itemNo).find(".txtCredEwt").val(roundNumber(ewtAmount, 2));
                    $("#" + itemNo).find(".txtCredCash").val(roundNumber((grossAmt - ewtAmount), 2));
                }
            } else {
                $("#" + itemNo).find(".txtCredEwt").val(0);
                $("#" + itemNo).find(".txtCredCash").val(roundNumber(grossAmt, 2));
            }

            var gross = $(".txtGross");
            var credEwt = $(".txtCredEwt");
            var credCash = $(".txtCredCash");

            var grossTotal = 0;
            var ewtSubTotal = 0;
            var cashSubTotal = 0;

            for (var i = 0; i < gross.length; i++) {
                grossTotal += Number(gross[i].value);
            }

            for (var i = 0; i < credEwt.length; i++) {
                ewtSubTotal += Number(credEwt[i].value);
            }

            for (var i = 0; i < credCash.length; i++) {
                cashSubTotal += Number(credCash[i].value);
            }

            $("#grossTotal").val(roundNumber(grossTotal, 2));
            $("#credEwtTotal").val(roundNumber(ewtSubTotal, 2));
            $("#credCashTotal").val(roundNumber(cashSubTotal, 2));
            $("#credTotal").val(roundNumber(Number(ewtSubTotal + cashSubTotal), 2));

            var ccyList = [];
            for (var i = 0; i < $('.txtccy:not(#template_ccy)').length; i++) {
                ccyList.push($($('.txtccy:not(#template_ccy)')[i]).val());
            }
            if ($('.txtccy:not(#template_ccy)').length > 1 && !(ccyList.every((val, i, arr) => val === arr[0]))) {
                $("#grossTotal").val(0.00);
                $("#credEwtTotal").val(0.00);
                $("#credCashTotal").val(0.00);
                $("#credTotal").val(0.00);
            }
        }
    });
</script>