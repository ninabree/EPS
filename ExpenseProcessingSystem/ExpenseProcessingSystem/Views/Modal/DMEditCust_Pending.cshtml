
@{
    ViewData["Title"] = "DMEditCust_Pending";
    Layout = "~/Views/Shared/_ModalLayout.cshtml";
}
@using ExpenseProcessingSystem.ViewModels
@model List<DMCustViewModel>
<div id="table" class="table-editable">
    @using (Html.BeginForm("EditCust_Pending", "Home", FormMethod.Post, new { @class = "validate-form", @id = "tsForm" }))
    {
        <table class="table table-bordered editable-th">
            <tr>
                <th>Customer Name</th>
                <th>Customer Abbreviation</th>
                <th>Customer Account No</th>
                <th>Status</th>
            </tr>
            @if (Model != null)
            {
                @for (int i = 0; i < Model.Count(); i++)
                {
                    <tr>
                        <td contenteditable="true">@Html.TextBoxFor(item => item[i].Cust_Name, new { @class = "w-full" })</td>
                        <td contenteditable="true">@Html.TextBoxFor(item => item[i].Cust_Abbr, new { @class = "w-full" })</td>
                        <td contenteditable="true">@Html.TextBoxFor(item => item[i].Cust_No, new { @class = "w-full" })</td>
                        <td contenteditable="false">@Html.TextBoxFor(item => item[i].Cust_Status, new { @class = "w-full" })</td>
                        @Html.HiddenFor(item => item[i].Cust_MasterID)
                    </tr>
                }
            }
        </table>
    }
</div>
