
@{
    ViewData["Title"] = "DMRejCurr";
    Layout = "~/Views/Shared/_ModalLayout.cshtml";
}
@using ExpenseProcessingSystem.ViewModels
@model List<DMCurrencyViewModel>
<div id="table" class="">
    @using (Html.BeginForm("RejCurr", "Home", FormMethod.Post, new { @class = "validate-form", @id = "tsForm" }))
    {
        <table class="table table-bordered editable-th">
            <tr>
                <th>Currency Name</th>
                <th>CCY Abbr</th>
                <th>Status</th>
            </tr>
            @if (Model != null)
            {
                @for (int i = 0; i < Model.Count(); i++)
                {
                    <tr>
                        <td>@Html.TextBoxFor(item => item[i].Curr_Name, new { @class = "w-full", @readonly = "readonly" })</td>
                        <td>@Html.TextBoxFor(item => item[i].Curr_CCY_ABBR, new { @class = "w-full", @readonly = "readonly" })</td>
                        <td>@Html.TextBoxFor(item => item[i].Curr_Status, new { @class = "w-full", @readonly = "readonly" })</td>
                        @Html.HiddenFor(item => item[i].Curr_MasterID)
                        @Html.HiddenFor(item => item[i].Curr_Creator_ID)
                    </tr>
                }
            }
        </table>
    }
</div>
